# --- Application Configuration ---
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# --- Database Configuration (PostgreSQL) ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=password
DB_NAME=notification_db
DB_SSL=false

# --- Redis Configuration (Cache & Preferences) ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# --- Azure Service Bus Configuration ---
# Connection string with Listen permissions for topics
AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://example.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your_key
# Topics to subscribe to
SB_TOPIC_SERVICE_REQUESTS=service.request.events
SB_TOPIC_CHAT=chat.events
SB_TOPIC_PRODUCTS=product.events
# Subscription name for this service
SB_SUBSCRIPTION_NAME=notification-service-sub

# --- Firebase Cloud Messaging (Push Notifications) ---
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# --- Azure Communication Services (Email) ---
ACS_CONNECTION_STRING=endpoint=https://example.communication.azure.com/;accesskey=your_key
ACS_SENDER_EMAIL=donotreply@example.com

# --- JWT Configuration (for API & WebSockets) ---
JWT_SECRET=your_jwt_secret
JWT_ISSUER=https://your-tenant.b2clogin.com/...