# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database (PostgreSQL with PostGIS)
DB_HOST=localhost
DB_PORT=5434
DB_USERNAME=warranty_user
DB_PASSWORD=warranty_pass
DB_NAME=warranty_service_requests
DB_SYNC=false
DB_LOGGING=true

# Redis (For WebSocket Adapter & Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=3600s

# External Microservices
PRODUCT_SERVICE_URL=http://localhost:3002
SERVICE_CENTER_SERVICE_URL=http://localhost:3003

# Azure Blob Storage (For Signature Capture)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=devstoreaccount1;AccountKey=...;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=signatures

# Azure Service Bus (For Events)
AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://...