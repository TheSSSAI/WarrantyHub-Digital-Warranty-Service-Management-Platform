# ==============================================================================
# APP CONFIGURATION
# ==============================================================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
SERVICE_NAME=geolocation-service

# ==============================================================================
# DATABASE CONFIGURATION (TimescaleDB/PostgreSQL)
# ==============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=geolocation_db
DB_SYNCHRONIZE=false
DB_LOGGING=true

# ==============================================================================
# REDIS CONFIGURATION (Cache & Pub/Sub)
# ==============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=geo:

# ==============================================================================
# AUTHENTICATION (JWT)
# ==============================================================================
# Shared secret or Public Key for verifying tokens from Identity Service
JWT_SECRET=super-secret-key-change-in-production
JWT_EXPIRATION=3600s

# ==============================================================================
# EXTERNAL APIS
# ==============================================================================
# Azure Maps or Mapbox for ETA Calculation
MAP_PROVIDER_API_KEY=your_api_key_here
MAP_PROVIDER_BASE_URL=https://atlas.microsoft.com/route/directions/json

# ==============================================================================
# LOGGING
# ==============================================================================
LOG_LEVEL=debug