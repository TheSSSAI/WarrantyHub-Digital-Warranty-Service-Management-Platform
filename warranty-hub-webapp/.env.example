# API Configuration
NEXT_PUBLIC_API_URL=https://api.warrantyhub.com/api/v1
NEXT_PUBLIC_API_TIMEOUT=15000

# Mapbox Configuration (Required for Service Area definition and tracking)
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_public_token_here

# Firebase Configuration (Required for Push Notifications)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key

# Authentication (Azure AD B2C)
NEXT_PUBLIC_AUTH_CLIENT_ID=your_client_id
NEXT_PUBLIC_AUTH_TENANT_NAME=your_tenant_name
NEXT_PUBLIC_AUTH_POLICY_NAME=B2C_1_sign_in_up

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MOCK_API=false