# Application Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=api/v1
SERVICE_NAME=product-service

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=warranty_product_db
DB_SSL=false
DB_SYNCHRONIZE=false

# Azure Service Bus Configuration
# Required for event publishing/subscription (REQ-INTG-001, REQ-DATA-001)
AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://example.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=exampleKey
AZURE_SERVICE_BUS_TOPIC_PRODUCT_EVENTS=product.events
AZURE_SERVICE_BUS_TOPIC_TRANSFER_EVENTS=transfer.events

# Azure Blob Storage Configuration
# Required for storing invoice documents and warranty files
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=examplestorage;AccountKey=exampleKey;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_INVOICES=invoices
AZURE_STORAGE_CONTAINER_WARRANTIES=warranties

# Authentication (Azure AD B2C)
# Required for token validation in guards
AZURE_AD_B2C_TENANT_ID=example-tenant-id
AZURE_AD_B2C_CLIENT_ID=example-client-id
AZURE_AD_B2C_POLICY_NAME=B2C_1_signupsignin

# External Services
# OCR Service Endpoint (if synchronous) or Queue Name (if async)
OCR_SERVICE_QUEUE_NAME=ocr-processing-queue