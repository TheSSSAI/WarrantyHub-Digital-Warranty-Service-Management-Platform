# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=AuditService

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=secret
DB_NAME=warranty_hub_audit
# Set to true only for development
DB_SYNCHRONIZE=false

# Azure Service Bus Configuration
# Connection string with Listen permissions for the topic/subscription
ASB_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your-key
ASB_TOPIC_NAME=system-events
ASB_SUBSCRIPTION_NAME=audit-service-sub

# Logging
LOG_LEVEL=debug