# Application
PORT=3000
NODE_ENV=development

# Database - PostgreSQL Read Replica Configuration
# NOTE: This service must connect to the Read Replica, not the Primary
READ_REPLICA_HOST=localhost
READ_REPLICA_PORT=5432
READ_REPLICA_USERNAME=read_only_user
READ_REPLICA_PASSWORD=secure_password
READ_REPLICA_DATABASE=warranty_hub
READ_REPLICA_SSL=false

# Authentication
# Shared secret for validating JWTs generated by the Auth Service/Identity Provider
JWT_SECRET=your_jwt_secret_key_here